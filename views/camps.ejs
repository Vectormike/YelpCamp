<% include partials/header %>

<header>
    <div class="jumbotron">
        <div class="container text-center">
            <h1 class="display-4">Camps</h1>
            <!-- <p class="lead">Subtitle</p> -->
            <hr class="my-4">
            <a href="/camps/add" class="btn btn-secondary" role="button">Add Camps</a>
            <a href="/" class="btn btn-danger" role="button">Go Back</a>
        </div>    
    </div>
</header>

<div class="row text-center py-5">
    <% campgrounds.forEach(function(campground){ %>
		<div class="col-sm-6 col-md-3">
            <div class="thumbnail">
                <img class="img-thumbnail" src="<%= campground.image %>"/>
                <h4> <%=campground.name %> </h4>
                <p>
                    <a class="btn-info btn-sm" href="/camps/<%=campground.id%>"> Info <i class="fas fa-info"></i></a>
                    
                </p>
            </div>
        </div>        
    <% }); %>

</div>
<% include partials/footer %>

 
		